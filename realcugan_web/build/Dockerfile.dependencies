FROM debian:sid-20230522

RUN apt update
RUN DEBIAN_FRONTEND=noninteractive apt install -yq git python-is-python3 xz-utils lbzip2 cmake golang make g++
RUN apt autoclean

WORKDIR /root
RUN git clone https://github.com/emscripten-core/emsdk.git
WORKDIR /root/emsdk
RUN ./emsdk install 3.1.13
RUN ./emsdk activate 3.1.13
RUN echo 'source "/root/emsdk/emsdk_env.sh"' >> /root/.bashrc

WORKDIR /root
