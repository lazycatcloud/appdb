{
  "listen": {
    "hostname": "127.0.0.1",
    "port": 9000
  },
  "webserver": {
    "https": true,
    "hostname": "",
    "port": 443
  },
  "oauth2": {
    "token_lifetime": {
      "access_token": "1 day",
      "refresh_token": "2 weeks"
    }
  },
  "secrets": {
    "peertube": ""
  },
  "rates_limit": {
    "api": {
      "window": "10 seconds",
      "max": 50
    },
    "login": {
      "window": "1 minutes",
      "max": 15
    },
    "signup": {
      "window": "5 minutes",
      "max": 2
    },
    "ask_send_email": {
      "window": "5 minutes",
      "max": 3
    },
    "receive_client_log": {
      "window": "10 minutes",
      "max": 10
    }
  },
  "trust_proxy": [
    "loopback"
  ],
  "database": {
    "hostname": "postgres",
    "port": 5432,
    "ssl": false,
    "username": "peertube",
    "password": "peertube",
    "suffix": "",
    "pool": {
      "max": 5
    }
  },
  "redis": {
    "hostname": "redis",
    "port": 6379,
    "auth": null,
    "db": 0,
    "sentinel": {
      "enabled": false,
      "enable_tls": false,
      "master_name": "",
      "sentinels": [
        {
          "hostname": "",
          "port": 26379
        }
      ]
    }
  },
  "smtp": {
    "transport": "smtp",
    "sendmail": null,
    "hostname": null,
    "port": 465,
    "username": null,
    "password": null,
    "tls": true,
    "disable_starttls": false,
    "ca_file": null,
    "from_address": "admin@example.com"
  },
  "email": {
    "body": {
      "signature": "PeerTube"
    },
    "subject": {
      "prefix": "[PeerTube]"
    }
  },
  "defaults": {
    "publish": {
      "download_enabled": true,
      "comments_enabled": true,
      "privacy": 1,
      "licence": null
    },
    "p2p": {
      "webapp": {
        "enabled": true
      },
      "embed": {
        "enabled": true
      }
    }
  },
  "storage": {
    "tmp": "/lzcapp/var/storage/tmp/",
    "tmp_persistent": "/lzcapp/var/storage/tmp-persistent/",
    "bin": "/lzcapp/var/storage/bin/",
    "avatars": "/lzcapp/var/storage/avatars/",
    "videos": "/lzcapp/var/storage/videos/",
    "streaming_playlists": "/lzcapp/var/storage/streaming-playlists/",
    "redundancy": "/lzcapp/var/storage/redundancy/",
    "logs": "/lzcapp/var/storage/logs/",
    "previews": "/lzcapp/var/storage/previews/",
    "thumbnails": "/lzcapp/var/storage/thumbnails/",
    "torrents": "/lzcapp/var/storage/torrents/",
    "captions": "/lzcapp/var/storage/captions/",
    "cache": "/lzcapp/var/storage/cache/",
    "plugins": "/lzcapp/var/storage/plugins/",
    "well_known": "/lzcapp/var/storage/well-known/",
    "client_overrides": "/lzcapp/var/storage/client-overrides/"
  },
  "static_files": {
    "private_files_require_auth": true
  },
  "object_storage": {
    "enabled": false,
    "endpoint": "",
    "region": "us-east-1",
    "upload_acl": {
      "public": "public-read",
      "private": "private"
    },
    "proxy": {
      "proxify_private_files": true
    },
    "credentials": {
      "access_key_id": "",
      "secret_access_key": ""
    },
    "max_upload_part": "100MB",
    "streaming_playlists": {
      "bucket_name": "streaming-playlists",
      "prefix": "",
      "base_url": ""
    },
    "videos": {
      "bucket_name": "videos",
      "prefix": "",
      "base_url": ""
    }
  },
  "log": {
    "level": "info",
    "rotation": {
      "enabled": true,
      "max_file_size": "12MB",
      "max_files": 20
    },
    "anonymize_ip": false,
    "log_ping_requests": true,
    "log_tracker_unknown_infohash": true,
    "prettify_sql": false,
    "accept_client_log": true
  },
  "open_telemetry": {
    "metrics": {
      "enabled": false,
      "http_request_duration": {
        "enabled": true
      },
      "prometheus_exporter": {
        "hostname": "127.0.0.1",
        "port": 9091
      }
    },
    "tracing": {
      "enabled": false,
      "jaeger_exporter": {
        "endpoint": ""
      }
    }
  },
  "trending": {
    "videos": {
      "interval_days": 7,
      "algorithms": {
        "enabled": [
          "hot",
          "most-viewed",
          "most-liked"
        ],
        "default": "most-viewed"
      }
    }
  },
  "redundancy": {
    "videos": {
      "check_interval": "1 hour",
      "strategies": null
    }
  },
  "remote_redundancy": {
    "videos": {
      "accept_from": "anybody"
    }
  },
  "csp": {
    "enabled": false,
    "report_only": true,
    "report_uri": null
  },
  "security": {
    "frameguard": {
      "enabled": true
    },
    "powered_by_header": {
      "enabled": true
    }
  },
  "tracker": {
    "enabled": true,
    "private": true,
    "reject_too_many_announces": false
  },
  "history": {
    "videos": {
      "max_age": -1
    }
  },
  "views": {
    "videos": {
      "remote": {
        "max_age": "30 days"
      },
      "local_buffer_update_interval": "30 minutes",
      "ip_view_expiration": "1 hour"
    }
  },
  "geo_ip": {
    "enabled": true,
    "country": {
      "database_url": "https://dbip.mirror.framasoft.org/files/dbip-country-lite-latest.mmdb"
    }
  },
  "plugins": {
    "index": {
      "enabled": true,
      "check_latest_versions_interval": "12 hours",
      "url": "https://packages.joinpeertube.org"
    }
  },
  "federation": {
    "videos": {
      "federate_unlisted": false,
      "cleanup_remote_interactions": true
    }
  },
  "peertube": {
    "check_latest_version": {
      "enabled": true,
      "url": "https://joinpeertube.org/api/v1/versions.json"
    }
  },
  "webadmin": {
    "configuration": {
      "edition": {
        "allowed": true
      }
    }
  },
  "feeds": {
    "videos": {
      "count": 20
    },
    "comments": {
      "count": 20
    }
  },
  "remote_runners": {
    "stalled_jobs": {
      "live": "30 seconds",
      "vod": "2 minutes"
    }
  },
  "cache": {
    "previews": {
      "size": 500
    },
    "captions": {
      "size": 500
    },
    "torrents": {
      "size": 500
    }
  },
  "admin": {
    "email": "admin@example.com"
  },
  "contact_form": {
    "enabled": true
  },
  "signup": {
    "enabled": false,
    "limit": 10,
    "minimum_age": 16,
    "requires_approval": true,
    "requires_email_verification": false,
    "filters": {
      "cidr": {
        "whitelist": [],
        "blacklist": []
      }
    }
  },
  "user": {
    "history": {
      "videos": {
        "enabled": true
      }
    },
    "video_quota": -1,
    "video_quota_daily": -1
  },
  "video_channels": {
    "max_per_user": 20
  },
  "transcoding": {
    "enabled": true,
    "allow_additional_extensions": true,
    "allow_audio_files": true,
    "remote_runners": {
      "enabled": false
    },
    "threads": 1,
    "concurrency": 1,
    "profile": "default",
    "resolutions": {
      "0p": false,
      "144p": false,
      "240p": false,
      "360p": false,
      "480p": true,
      "720p": true,
      "1080p": true,
      "1440p": true,
      "2160p": true
    },
    "always_transcode_original_resolution": true,
    "webtorrent": {
      "enabled": false
    },
    "hls": {
      "enabled": true
    }
  },
  "live": {
    "enabled": false,
    "max_duration": -1,
    "max_instance_lives": 20,
    "max_user_lives": 3,
    "allow_replay": true,
    "latency_setting": {
      "enabled": true
    },
    "rtmp": {
      "enabled": true,
      "hostname": null,
      "port": 1935,
      "public_hostname": null
